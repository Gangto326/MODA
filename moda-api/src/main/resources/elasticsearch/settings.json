{
  "analysis": {
    "analyzer": {
      "korean": {
        "type": "nori",
        "decompound_mode": "mixed"
      },
      "korean_completion": {
        "type": "custom",
        "tokenizer": "korean_tokenizer",
        "filter": ["lowercase", "edge_ngram_filter"]
      },
      "ngram_analyzer": {
        "type": "custom",
        "tokenizer": "ngram_tokenizer",
        "filter": ["lowercase"]
      }
    },
    "tokenizer": {
      "korean_tokenizer": {
        "type": "nori_tokenizer"
      },
      "ngram_tokenizer": {
        "type": "ngram",
        "min_gram": 2,
        "max_gram": 3,
        "token_chars": ["letter", "digit"]
      }
    },
    "filter": {
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 50
      }
    }
  }
}